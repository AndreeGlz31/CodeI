<?php
namespace App\Controllers;

use CodeIgniter\Exceptions\PageNotFoundException;

class Pages extends BaseController
{
        public function index()
    {
        return view('index');
  

    public function view($page = 'Vacaciones')
    {
        if (! is_file(APPPATH . 'Views/pages/' . $page . '.php')) { //Esta linea manda a llamar el archivo  de index de  la carpeta pages
            throw new PageNotFoundException($page); //Si no se encuentra se manda una excepcion 404 de pagina no encontrada
        }

        $data['title'] = ucfirst($page); // Capitalize the first letter

        return view('templates/Vacaciones', $data); //Se carga la vista de index que esta en los templates
            //. view('pages/' . $page)
            //. view('templates/footer');
    }
}
